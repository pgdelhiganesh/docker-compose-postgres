# For PostgreSQL
POSTGRES_DB: default_database # The PostgreSQL default database (automatically created at first launch)
POSTGRES_USER: admin # The PostgreSQL user (useful to connect to the database)
POSTGRES_PASSWORD: password # The PostgreSQL password (useful to connect to the database)

# For pgAdmin
# Default email for initial pgAdmin login (change in production)
PGADMIN_DEFAULT_EMAIL: admin@example.com
# Default password for pgAdmin login (use a secure password in production)
PGADMIN_DEFAULT_PASSWORD: password
